<?xml version="1.0" encoding="CP1252"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="v.extrude">
	<description>
		Eleva objetos vectoriales planos a 3D con alturas definidas.
	</description>
	<keywords>
		vectorial, geometría, 3D
	</keywords>
	<parameter name="input" type="string" required="yes" multiple="no">
		<description>
			Nombre del mapa vectorial 2D de entrada
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="vector" prompt="vector" />
	</parameter>
	<parameter name="output" type="string" required="yes" multiple="no">
		<description>
			Nombre del mapa vectorial 3D resultante
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="vector" prompt="vector" />
	</parameter>
	<parameter name="zshift" type="float" required="no" multiple="no">
		<description>
			Cambiando valor para coordenadas Z
		</description>
		<default>
			0
		</default>
	</parameter>
	<parameter name="elevation" type="string" required="no" multiple="no">
		<description>
			Ráster de elevación para extracción de alturas
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="cell" prompt="raster" />
	</parameter>
	<parameter name="height" type="float" required="no" multiple="no">
		<description>
			Altura fija para objetos vectoriales 3D
		</description>
	</parameter>
	<parameter name="hcolumn" type="string" required="no" multiple="no">
		<description>
			Nombre de columna de atributos con alturas de los objetos
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old_dbcolumn" element="dbcolumn" prompt="dbcolumn" />
	</parameter>
	<parameter name="type" type="string" required="no" multiple="yes">
		<description>
			Tipo de objeto espacial.
		</description>
		<default>
			point,line,boundary,area
		</default>
		<values>
			<value>
				<name>point</name>
			</value>
			<value>
				<name>line</name>
			</value>
			<value>
				<name>boundary</name>
			</value>
			<value>
				<name>area</name>
			</value>
		</values>
	</parameter>
	<parameter name="layer" type="integer" required="no" multiple="no">
		<label>
			Número de capa.
		</label>
		<description>
			Es posible conectar un solo mapa vectorial con múltiples tablas de una base de datos. Este número determina qué tabla se ha de usar.
		</description>
		<gisprompt age="old_layer" element="layer" prompt="layer" />
		<default>
			1
		</default>
	</parameter>
	<flag name="t">
		<description>
			Trazar elevación
		</description>
	</flag>
	<flag name="overwrite">
		<description>
			Permite a los archivos de salida sobrescribir los archivos existentes.
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Salida detallada del módulo.
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Salida del módulo "silenciosa".
		</description>
	</flag>
</task>
