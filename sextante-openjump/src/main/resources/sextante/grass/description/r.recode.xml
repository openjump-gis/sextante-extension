<?xml version="1.0" encoding="CP1252"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="r.recode">
	<description>
		Recodifica mapas ráster de categorías.
	</description>
	<keywords>
		raster, recode category
	</keywords>
	<parameter name="input" type="string" required="yes" multiple="no">
		<description>
			Mapa ráster a recodificar
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="cell" prompt="raster" />
	</parameter>
	<parameter name="output" type="string" required="yes" multiple="no">
		<description>
			Nombre del mapa raster de salida.
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="cell" prompt="raster" />
	</parameter>
	<parameter name="rules" type="string" required="no" multiple="no">
		<label>
			Archivo que contiene reglas de recodificación
		</label>
		<description>
			Nombre del archivo de entrada.
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old_file" element="file" prompt="input" />
	</parameter>
	<parameter name="title" type="string" required="no" multiple="no">
		<description>
			Título para el mapa ráster resultante
		</description>
	</parameter>
	<flag name="a">
		<description>
			Alinear la región actual al mapa de entrada
		</description>
	</flag>
	<flag name="d">
		<description>
			Forzar la salida a tipo de mapa doble (DCELL)
		</description>
	</flag>
	<flag name="overwrite">
		<description>
			Permite a los archivos de salida sobrescribir los archivos existentes.
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Salida detallada del módulo.
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Salida del módulo "silenciosa".
		</description>
	</flag>
</task>
