<?xml version="1.0" encoding="CP1252"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="r.prominence">
	<description>
		Calculates prominence statistic
	</description>
	<parameter name="input" type="string" required="yes" multiple="no">
		<description>
			Raster map for which to calculate index
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="cell" prompt="raster" />
	</parameter>
	<parameter name="output" type="string" required="yes" multiple="no">
		<description>
			Raster to store output
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="cell" prompt="raster" />
	</parameter>
	<parameter name="radius" type="integer" required="yes" multiple="no">
		<description>
			Radius of neighborhood in map cells
		</description>
	</parameter>
	<flag name="a">
		<description>
			Calculate absolute differences
		</description>
	</flag>
	<flag name="l">
		<description>
			Local data normalization
		</description>
	</flag>
	<flag name="g">
		<description>
			Global data normalization
		</description>
	</flag>
	<flag name="r">
		<description>
			Square neighborhood shape (instead of circular)
		</description>
	</flag>
	<flag name="q">
		<description>
			Disable on-screen progress display
		</description>
	</flag>
	<flag name="overwrite">
		<description>
			Permite a los archivos de salida sobrescribir los archivos existentes.
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Salida detallada del módulo.
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Salida del módulo "silenciosa".
		</description>
	</flag>
</task>
