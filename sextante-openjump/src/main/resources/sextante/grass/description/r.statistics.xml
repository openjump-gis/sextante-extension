<?xml version="1.0" encoding="CP1252"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="r.statistics">
	<description>
		Calcula estadísticas orientadas a categorías u objetos.
	</description>
	<keywords>
		ráster, estadísticas
	</keywords>
	<parameter name="base" type="string" required="yes" multiple="no">
		<description>
			Nombre del mapa raster base.
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="cell" prompt="raster" />
	</parameter>
	<parameter name="cover" type="string" required="yes" multiple="no">
		<description>
			Nombre del mapa raster de cobertura.
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="cell" prompt="raster" />
	</parameter>
	<parameter name="method" type="string" required="yes" multiple="no">
		<description>
			Método de estadísticas basado en objetos.
		</description>
		<values>
			<value>
				<name>diversity</name>
			</value>
			<value>
				<name>distribution</name>
			</value>
			<value>
				<name>average</name>
			</value>
			<value>
				<name>mode</name>
			</value>
			<value>
				<name>median</name>
			</value>
			<value>
				<name>avedev</name>
			</value>
			<value>
				<name>stddev</name>
			</value>
			<value>
				<name>variance</name>
			</value>
			<value>
				<name>skewness</name>
			</value>
			<value>
				<name>kurtosis</name>
			</value>
			<value>
				<name>min</name>
			</value>
			<value>
				<name>max</name>
			</value>
			<value>
				<name>sum</name>
			</value>
		</values>
	</parameter>
	<parameter name="output" type="string" required="no" multiple="no">
		<description>
			Mapa ráster resultante (no usado con 'distribución')
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="cell" prompt="raster" />
	</parameter>
	<flag name="c">
		<description>
			Valores de cobertura extraídos de las etiquetas de categoría del mapa de cobertura
		</description>
	</flag>
	<flag name="overwrite">
		<description>
			Permite a los archivos de salida sobrescribir los archivos existentes.
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Salida detallada del módulo.
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Salida del módulo "silenciosa".
		</description>
	</flag>
</task>
