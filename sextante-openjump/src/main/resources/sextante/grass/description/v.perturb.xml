<?xml version="1.0" encoding="CP1252"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="v.perturb">
	<description>
		Perturbaciones de localizaciones aleatorias de puntos vectoriales de GRASS
	</description>
	<keywords>
		vectorial
	</keywords>
	<parameter name="input" type="string" required="yes" multiple="no">
		<description>
			Puntos vectoriales a perturbar espacialmente
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="vector" prompt="vector" />
	</parameter>
	<parameter name="output" type="string" required="yes" multiple="no">
		<description>
			Nombre para el mapa vectorial de salida.
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="vector" prompt="vector" />
	</parameter>
	<parameter name="distribution" type="string" required="no" multiple="no">
		<description>
			Distribución de la perturbación
		</description>
		<default>
			uniform
		</default>
		<values>
			<value>
				<name>uniform</name>
			</value>
			<value>
				<name>normal</name>
			</value>
		</values>
	</parameter>
	<parameter name="parameters" type="float" required="yes" multiple="yes">
		<description>
			Parámetro(s) de distribución. Se la distribución es uniforme, sólo se necesita un parámetro, el máximo. Para una distribución normal se requieren dos parámetros, la media y la desviación estándar.
		</description>
	</parameter>
	<parameter name="minimum" type="float" required="no" multiple="no">
		<description>
			Desviación mínima en unidades de mapa
		</description>
		<default>
			0.0
		</default>
	</parameter>
	<parameter name="seed" type="integer" required="no" multiple="no">
		<description>
			Seed for random number generation
		</description>
		<default>
			0
		</default>
	</parameter>
	<flag name="q">
		<description>
			Silencioso
		</description>
	</flag>
	<flag name="overwrite">
		<description>
			Permite a los archivos de salida sobrescribir los archivos existentes.
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Salida detallada del módulo.
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Salida del módulo "silenciosa".
		</description>
	</flag>
</task>
