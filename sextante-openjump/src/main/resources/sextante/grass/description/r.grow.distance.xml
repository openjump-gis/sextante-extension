<?xml version="1.0" encoding="CP1252"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="r.grow.distance">
	<description>
		Generates a raster map layer of distance to features in input layer.
	</description>
	<keywords>
		ráster
	</keywords>
	<parameter name="input" type="string" required="yes" multiple="no">
		<description>
			Nombre del mapa raster de entrada.
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="cell" prompt="raster" />
	</parameter>
	<parameter name="distance" type="string" required="no" multiple="no">
		<description>
			Name for distance output map
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="cell" prompt="raster" />
	</parameter>
	<parameter name="value" type="string" required="no" multiple="no">
		<description>
			Name for value output map
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="cell" prompt="raster" />
	</parameter>
	<parameter name="metric" type="string" required="no" multiple="no">
		<description>
			Métrica
		</description>
		<default>
			euclidean
		</default>
		<values>
			<value>
				<name>euclidean</name>
			</value>
			<value>
				<name>squared</name>
			</value>
			<value>
				<name>maximum</name>
			</value>
			<value>
				<name>manhattan</name>
			</value>
		</values>
	</parameter>
	<flag name="overwrite">
		<description>
			Permite a los archivos de salida sobrescribir los archivos existentes.
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Salida detallada del módulo.
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Salida del módulo "silenciosa".
		</description>
	</flag>
</task>
