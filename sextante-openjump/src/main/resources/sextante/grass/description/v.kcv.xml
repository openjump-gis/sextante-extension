<?xml version="1.0" encoding="CP1252"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="v.kcv">
	<description>
		Randomly partition points into test/train sets.
	</description>
	<keywords>
		vectorial, estadísticas
	</keywords>
	<parameter name="input" type="string" required="yes" multiple="no">
		<description>
			Nombre del mapa vectorial de entrada.
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="vector" prompt="vector" />
	</parameter>
	<parameter name="output" type="string" required="yes" multiple="no">
		<description>
			Nombre para el mapa vectorial de salida.
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="vector" prompt="vector" />
	</parameter>
	<parameter name="k" type="integer" required="yes" multiple="no">
		<description>
			Número de particiones
		</description>
		<values>
			<value>
				<name>1-32767</name>
			</value>
		</values>
	</parameter>
	<parameter name="column" type="string" required="yes" multiple="no">
		<description>
			Nombre para la nueva columna en la que se escribe el número de partición
		</description>
		<default>
			part
		</default>
	</parameter>
	<flag name="d">
		<description>
			Usar drand48()
		</description>
	</flag>
	<flag name="q">
		<description>
			Silencioso
		</description>
	</flag>
	<flag name="overwrite">
		<description>
			Permite a los archivos de salida sobrescribir los archivos existentes.
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Salida detallada del módulo.
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Salida del módulo "silenciosa".
		</description>
	</flag>
</task>
