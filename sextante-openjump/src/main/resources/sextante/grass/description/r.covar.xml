<?xml version="1.0" encoding="CP1252"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="r.covar">
	<description>
		Produce una matriz de covarianza/correlación para la capa(s) de mapa ráster especificada por el usuario.
	</description>
	<keywords>
		ráster
	</keywords>
	<parameter name="map" type="string" required="yes" multiple="yes">
		<description>
			Nombre(s) del (los) mapa(s) raster de entrada.
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="cell" prompt="raster" />
	</parameter>
	<flag name="r">
		<description>
			Imprimir matriz de correlación
		</description>
	</flag>
	<flag name="q">
		<description>
			Ejecutar en modo silencioso
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Salida detallada del módulo.
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Salida del módulo "silenciosa".
		</description>
	</flag>
</task>
